<Window x:Class="Revamped_GroceryPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:Revamped_GroceryPOS"
        mc:Ignorable="d"
        Title="Joshua Sarry Sarry Store" Height="720" Width="1280"
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Border Name="MainBorder" 
            Background="#F6F8FA" 
            CornerRadius="12">

        <Grid>

            <Border Name="Docker" 
                    Background="#D9D9D9" 
                    Height="28" 
                    CornerRadius="12,12,0,0"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Stretch" 
                    Margin="0,0,0,0"
                    MouseDown="Docker_MouseDown">

                <Grid>

                    <Button Name="CloseButton"
                            Width="16" 
                            Height="16"
                            Background="#F44336"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" 
                            Margin="1256,0,0,0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            MouseEnter="CloseButton_MouseEnter"
                            MouseLeave="CloseButton_MouseLeave"
                            ToolTip="Close">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Image x:Name="Close"
                           Source="pack://application:,,,/Resources/Icons/close.png" 
                           Width="14"
                           Height="14"
                           Visibility="Collapsed"/>
                    </Button>

                    <Button Name="MinimizeButton"
                            Width="16"
                            Height="16"
                            Background="#FFB32C"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="1232,0,0,0"
                            Click="MinimizeButton_Click"
                            Cursor="Hand"
                            MouseEnter="MinimizeButton_MouseEnter"
                            MouseLeave="MinimizeButton_MouseLeave"
                            ToolTip="Minimize">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Image x:Name="Minimize"
                           Source="pack://application:,,,/Resources/Icons/minus.png"
                           Width="16"
                           Height="16"
                           Visibility="Collapsed"/>
                    </Button>
                </Grid>
            </Border>

            <Border Name="DefaultSidePanel"
                    Background="White"
                    Width="48"
                    HorizontalAlignment="Left"
                    CornerRadius="0,0,0,12"
                    Margin="0,28,0,0">

                <Grid>
                    <Button Name="menu"
                            Height="24"
                            Width="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,24,12,644"
                            Cursor="Hand"
                            Click="Menu_Click">
                        <Image Source="pack://application:,,,/Resources/Icons/list.png"/>
                    </Button>

                    <Button Name="allItemsBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,78,12,590"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <Grid>
                            <Image Name="UnclickedAllItems"
                                   Source="pack://application:,,,/Resources/Icons/grid.png"/>
                            <Image Name="ClickedAllItems"
                                   Source="pack://application:,,,/Resources/Icons/grid (1).png"
                                   Visibility="Visible"/>
                        </Grid>
                    </Button>

                    <Button Name="fruitsBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,132,12,536"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <Grid>
                            <Image Name="UnclickedFruits"
                                   Source="pack://application:,,,/Resources/Icons/apple.png"/>
                            <Image Name="ClickedFruits"
                                   Source="pack://application:,,,/Resources/Icons/apple (1).png"
                                   Visibility="Hidden"/>
                        </Grid>
                    </Button>

                    <Button Name="vegetablesBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,186,12,482"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <Grid>
                            <Image Name="UnclickedVegetables"
                                   Source="pack://application:,,,/Resources/Icons/spinach.png"/>
                            <Image Name="ClickedVegetables"
                                   Source="pack://application:,,,/Resources/Icons/spinach (1).png"
                                   Visibility="Hidden"/>
                        </Grid>
                    </Button>

                    <Button Name="meatsBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,240,12,428"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <Grid>
                            <Image Name="UnclickedMeats"
                                   Source="pack://application:,,,/Resources/Icons/steak.png"/>
                            <Image Name="ClickedMeats"
                                   Source="pack://application:,,,/Resources/Icons/steak (1).png"
                                   Visibility="Hidden"/>
                        </Grid>
                    </Button>

                    <Button Name="drinksBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,294,12,374"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <Grid>
                            <Image Name="UnclickedDrinks"
                                   Source="pack://application:,,,/Resources/Icons/beverage.png"/>
                            <Image Name="ClickedDrinks"
                                   Source="pack://application:,,,/Resources/Icons/beverage (1).png"
                                   Visibility="Hidden"/>
                        </Grid>
                    </Button>

                    <Button Name="liquorBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,348,12,320"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <Grid>
                            <Image Name="UnclickedLiquor"
                                   Source="pack://application:,,,/Resources/Icons/cocktail.png"/>
                            <Image Name="ClickedLiquor"
                                   Source="pack://application:,,,/Resources/Icons/cocktail (1).png"
                                   Visibility="Hidden"/>
                        </Grid>
                    </Button>

                    <Button Name="adminBtn"
                            Width="24"
                            Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Margin="12,644,12,24"
                            Cursor="Hand"
                            Click="AdminBtn_Click">
                        <Grid>
                            <Image Name="UnclickedAdmin"
                                   Source="pack://application:,,,/Resources/Icons/user.png"/>
                        </Grid>
                    </Button>
                </Grid>
            </Border>

            <Border Name="Cart"
                    Background="White"
                    Width="306"
                    HorizontalAlignment="Right"
                    CornerRadius="0,0,12,0"
                    Margin="0,28,0,0">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="14,50,14,272">
                        <WrapPanel Name="CartWrapPanel">
                        </WrapPanel>
                    </ScrollViewer>

                    <TextBlock Text="Current Order"
                               FontSize="20"
                               FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold" 
                               Margin="24,15,24,648"/>

                    <Button Name="ClearCartButton"
                            Width="24" Height="24"
                            Style="{StaticResource TransparentHoverButtons}"
                            Cursor="Hand"
                            Margin="252,425,30,243"
                            ToolTip="Clear Cart"
                            Click="ClearCartButton_Click">
                        <Image Source="pack://application:,,,/Resources/Icons/delete-cart (1).png"/>
                    </Button>

                    <Border Width="279" Height="171"
                            CornerRadius="7"
                            Background="#E4E4E4" Margin="13.5,454,13.5,67">
                        <Grid>
                            <TextBlock Text="subtotal"
                                       FontSize="13"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       Foreground="#A7A7A7"
                                       Margin="20,17,0,0"/>
                            <TextBlock Text="discount%"
                                       FontSize="13"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       Foreground="#A7A7A7"
                                       Margin="20,42,0,0"/>
                            <TextBlock Text="discount"
                                       FontSize="13"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       Foreground="#A7A7A7"
                                       Margin="20,67,0,0"/>
                            <TextBlock Text="Total"
                                       FontSize="17"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
                                       Foreground="Black"
                                       Margin="20,138,0,0"/>

                            <TextBlock Name="subtotalTxtblk"
                                       Text="₱0.0"
                                       FontSize="13"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       TextAlignment="Right"
                                       Foreground="#A7A7A7"
                                       Margin="0,17,20,0"/>
                            <TextBlock Name="discountpTxtblk"
                                       Text="00%"
                                       FontSize="13"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       TextAlignment="Right"
                                       Foreground="#A7A7A7"
                                       Margin="0,42,20,0"/>
                            <TextBlock Name="discountTxtblk"
                                       Text="₱0.0"
                                       FontSize="13"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       TextAlignment="Right"
                                       Foreground="#A7A7A7"
                                       Margin="0,67,20,0"/>
                            <TextBlock Name="totalTxtblk"
                                       Text="₱0.0"
                                       FontSize="17"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
                                       TextAlignment="Right"
                                       Foreground="Black"
                                       Margin="0,138,20,0"/>

                            <Ellipse Width="27" Height="27"
                                     Fill="White" 
                                     Margin="-13.5,99,265,45"/>
                            <Ellipse Width="27" Height="27"
                                     Fill="White" 
                                     Margin="266,99,-13.5,45"/>
                        </Grid>
                    </Border>

                    <Border Width="279" Height="42"
                            CornerRadius="7"
                            Background="#4C81F1" 
                            Margin="13.5,637,13.5,13">
                        <Button Name="CheckoutButton"
                                Style="{StaticResource TransparentHoverButtons}"
                                Click="CheckoutBtn_Click">
                            <TextBlock Text="Checkout"
                                    FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
                                    FontSize="16"
                                    Foreground="White"/>
                        </Button>
                    </Border>
                </Grid>
            </Border>

            <Border Name="TextAndSearch"
                    Height="132"
                    Background="#FFF6F8FA" 
                    Margin="84,28,344,560">
                <Grid>
                    <TextBlock Text="welcome to"
                               FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
                               FontSize="11"
                               Foreground="Black"
                               Margin="30,39,0,0"/>
                    <TextBlock Text="Joshua's Sarry Sarry Store"
                               FontFamily="pack://application:,,,/Resources/Fonts/timeless-memories/#Timeless Memories"
                               FontWeight="Bold"
                               FontSize="25"
                               Foreground="Black"
                               Margin="27,52,0,0"/>
                </Grid>
            </Border>

            <Border Name="ProductsPane" 
                    Margin="84,160,344,10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <WrapPanel Name="ProductsWrapPanel">
                        </WrapPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Name="MainFrameShield"
                    Background="#383838"
                    Opacity="0.5"
                    Height="692"
                    VerticalAlignment="Bottom"
                    Visibility="Collapsed">
                <Button Name="KeepCollapsedSidePanel"
                        Style="{StaticResource TransparentHoverButtons}"
                        Click="KeepCollapsedSidePanel_Click"
                        Cursor="Arrow"/>
            </Border>

            <!-- Collapsed Side Panel -->

            <Border Name="CollapsedSidePanel"
                    Background="White"
                    Width="150"
                    HorizontalAlignment="Left"
                    CornerRadius="0,0,0,12"
                    Margin="0,28,0,0"
                    Visibility="Collapsed">
                <Grid>

                    <Button Name="cmenu"
                            Style="{StaticResource TransparentHoverButton}"
                            Height="24"
                            Margin="12,24,12,644"
                            Cursor="Hand"
                            Click="KeepCollapsedSidePanel_Click">

                        <Grid>
                            <Image Name="CUnclickedMenu"
                                    Source="pack://application:,,,/Resources/Icons/list.png"/>
                            <Image Name="CClickedMenu"
                                    Source="pack://application:,,,/Resources/Icons/list (1).png"
                                    Visibility="Hidden"/>
                        </Grid>
                    </Button>

                    <Button Name="callItemsBtn"
                            Style="{StaticResource TransparentHoverButton}"
                            Height="24"
                            Margin="12,78,12,590"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Name="CUnclickedAllItems"
                                        Source="pack://application:,,,/Resources/Icons/grid.png"/>
                                <Image Name="CClickedAllItems"
                                        Source="pack://application:,,,/Resources/Icons/grid (1).png"
                                        Visibility="Hidden"/>
                            </Grid>
                            <TextBlock Text="All Items"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       FontSize="11"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="19,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="cfruitsBtn"
                            Height="24"
                            Style="{StaticResource TransparentHoverButton}"
                            Margin="12,132,12,536"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Name="CUnclickedFruits"
                                        Source="pack://application:,,,/Resources/Icons/apple.png"/>
                                <Image Name="CClickedFruits"
                                       Source="pack://application:,,,/Resources/Icons/apple (1).png"
                                       Visibility="Hidden"/>
                            </Grid>
                            <TextBlock Text="Fruits"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       FontSize="11"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="19,0,0,0"/>
                        </StackPanel>

                    </Button>

                    <Button Name="cvegetablesBtn"
                            Height="24"
                            Style="{StaticResource TransparentHoverButton}"
                            Margin="12,186,12,482"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Name="CUnclickedVegetables"
                                       Source="pack://application:,,,/Resources/Icons/spinach.png"/>
                                <Image Name="CClickedVegetables"
                                       Source="pack://application:,,,/Resources/Icons/spinach (1).png"
                                       Visibility="Hidden"/>
                            </Grid>
                            <TextBlock Text="Vegetables"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                       FontSize="11"
                                       Foreground="Black"
                                       VerticalAlignment="Center"
                                       Margin="19,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="cmeatsBtn"
                            Height="24"
                            Style="{StaticResource TransparentHoverButton}"
                            Margin="12,240,12,428"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Name="CUnclickedMeats"
                                       Source="pack://application:,,,/Resources/Icons/steak.png"/>
                                <Image Name="CClickedMeats"
                                       Source="pack://application:,,,/Resources/Icons/steak (1).png"
                                       Visibility="Hidden"/>
                            </Grid>
                            <TextBlock Text="Meats"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                        FontSize="11"
                                        Foreground="Black"
                                        VerticalAlignment="Center"
                                        Margin="19,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="cdrinksBtn" 
                            Height="24"
                            Style="{StaticResource TransparentHoverButton}"
                            Margin="12,294,12,374"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Name="CUnclickedDrinks"
                                       Source="pack://application:,,,/Resources/Icons/beverage.png"/>
                                <Image Name="CClickedDrinks"
                                       Source="pack://application:,,,/Resources/Icons/beverage (1).png"
                                       Visibility="Hidden"/>
                            </Grid>
                            <TextBlock Text="Meats"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                        FontSize="11"
                                        Foreground="Black"
                                        VerticalAlignment="Center"
                                        Margin="19,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="cliquorBtn"
                            Height="24"
                            Style="{StaticResource TransparentHoverButton}"
                            Margin="12,348,12,320"
                            Cursor="Hand"
                            Click="CatBtns_Click">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Name="CUnclickedLiquor"
                                       Source="pack://application:,,,/Resources/Icons/cocktail.png"/>
                                <Image Name="CClickedLiquor"
                                       Source="pack://application:,,,/Resources/Icons/cocktail (1).png"
                                       Visibility="Hidden"/>
                            </Grid>
                            <TextBlock Text="Liquor"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                        FontSize="11"
                                        Foreground="Black"
                                        VerticalAlignment="Center"
                                        Margin="19,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="cadminBtn"
                            Height="24"
                            Style="{StaticResource TransparentHoverButton}"
                            Margin="12,644,12,24"
                            Cursor="Hand"
                            Click="AdminBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Name="CUnclickedAdmin"
                                    Source="pack://application:,,,/Resources/Icons/user.png"/>
                            <TextBlock Text="Go to Admin"
                                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                        FontSize="11"
                                        Foreground="Black"
                                        VerticalAlignment="Center"
                                        Margin="19,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!--
                This is the admin panel
            -->

            <Border Name="AdminPanel"
                Height="692"
                Background="#F6F8FA"
                VerticalAlignment="Bottom"
                Visibility="Hidden"
                CornerRadius="0,0,12,12">

                <Grid>
                    <Border Name="AdminDefaultSidePanel"
                        Background="White"
                        Width="48"
                        HorizontalAlignment="Left"
                        CornerRadius="0,0,0,12">

                        <Grid>
                            <Button Name="amenu"
                                Height="24"
                                Width="24"
                                Style="{StaticResource TransparentHoverButtons}"
                                Margin="12,24,12,644"
                                Cursor="Hand"
                                Click="Menu_Click">
                                <Image Name="unclickedMenu"
                                        Source="pack://application:,,,/Resources/Icons/list.png"/>
                            </Button>

                            <Button Name="reportsBtn"
                                Width="24"
                                Height="24"
                                Style="{StaticResource TransparentHoverButtons}"
                                Margin="12,78,12,590"
                                Cursor="Hand"
                                Click="CatBtns_Click">
                                <Grid>
                                    <Image Name="unclickedreports"
                                        Source="pack://application:,,,/Resources/Icons/pie-chart.png"/>
                                    <Image Name="clickedreports"
                                        Source="pack://application:,,,/Resources/Icons/pie-chart (2).png"
                                        Visibility="Hidden"/>
                                </Grid>
                            </Button>

                            <Button Name="inventoryBtn"
                                Width="24"
                                Height="24"
                                Style="{StaticResource TransparentHoverButtons}"
                                Margin="12,132,12,536"
                                Cursor="Hand"
                                Click="CatBtns_Click">
                                <Grid>
                                    <Image Name="unclickedinv"
                                        Source="pack://application:,,,/Resources/Icons/storage.png"/>
                                    <Image Name="clickedinv"
                                        Source="pack://application:,,,/Resources/Icons/storage (1).png"
                                        Visibility="Hidden"/>
                                </Grid>
                            </Button>

                            <Button Name="storeBtn"
                                Width="24"
                                Height="24"
                                Style="{StaticResource TransparentHoverButtons}"
                                Margin="12,644,12,24"
                                Cursor="Hand"
                                Click="StoreBtn_Click">
                                <Image Source="pack://application:,,,/Resources/Icons/store (1).png"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Reports Panel -->

                    <Border Name="ReportsPanel"
                    Height="692" Width="1232"
                    Background="#F6F8FA"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Visibility="Visible"
                    CornerRadius="12">
                        <Grid>
                            <TextBlock Text="Reports"
                                FontFamily="pack://application:,,,/Resources/Fonts/timeless-memories/#Timeless Memories"
                                FontWeight="Bold"
                                FontSize="25"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="30,25,0,0"/>

                            <Border Width="175" Height="40"
                                    CornerRadius="7"
                                    Background="#4C81F1"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="0,25,20,0">
                                <Button Name="DownLoadReport"
                                        Style="{StaticResource TransparentHoverButtons}"
                                        Click="DownLoadReport_Click">
                                    <TextBlock Text="Download Report"
                                            FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
                                            FontSize="16"
                                            Foreground="White"/>
                                </Button>
                            </Border>

                            <Border Width="175" Height="40"
                                    CornerRadius="7"
                                    Background="#4C81F1"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="0,25,215,0">
                                <Button Name="GenerateReport"
                                        Style="{StaticResource TransparentHoverButtons}"
                                        Click="GenerateReport_Click">
                                    <TextBlock Text="Generate Report"
                                            FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
                                            FontSize="16"
                                            Foreground="White"/>

                                </Button>
                            </Border>

                            <TextBlock Text="From"
                                FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                FontSize="12"
                                Foreground="Gray"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="0,29,125,0"/>
                            
                            <Border Width="112" Height="40"
                                CornerRadius="7"
                                Background="White"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Margin="0,25,550,0">
                                <DatePicker Name="FromDate"
                                    BorderBrush="Transparent"
                                    Background="Transparent"/>
                            </Border>

                            <TextBlock Text="To"
                                FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                                FontSize="12"
                                Foreground="Gray"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Margin="170,29,0,0"/>
                            
                            <Border Width="112" Height="40"
                                    CornerRadius="7"
                                    Background="White"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="0,25,410,0">
                                <DatePicker Name="ToDate"
                                    BorderBrush="Transparent"
                                    Background="Transparent"/>
                            </Border>

                            <Grid Width="616" Height="612"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom" Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                    <WrapPanel>
                                        <StackPanel Margin="10"
                                            Background="White">
                                            <TextBlock Text="Income Report" 
                                                FontWeight="Bold" FontSize="20" 
                                                FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins Bold"
