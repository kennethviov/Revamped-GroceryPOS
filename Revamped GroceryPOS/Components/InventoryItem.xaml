<UserControl x:Class="Revamped_GroceryPOS.Components.InventoryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Revamped_GroceryPOS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1212">
    <Border Width="1212" Height="40"
            Background="White">
        <Grid>
            <TextBlock Name="id"
                        Text="Item ID"
                        FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                        Foreground="Gray"
                        FontSize="13" 
                        Width="60" Height="18"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="35,0,0,0"/>
            <TextBlock Name="name" 
                        Text="Item Name"
                        FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                        Foreground="Gray"
                        FontSize="13" 
                        Width="188" Height="18"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="207,0,0,0"/>
            <TextBlock Name="price"
                        Text="Price"
                        FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                        Foreground="Gray"
                        FontSize="13" 
                        Width="150" Height="18"
                        TextAlignment="Center"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="400,0,0,0"/>
            <TextBlock Name="soldby"
                        Text="Sold By"
                        FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                        Foreground="Gray"
                        FontSize="13"
                        Width="100" Height="18"
                        TextAlignment="Center"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,475,0"/>
            <TextBlock Name="category"
                        Text="Category"
                        FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                        Foreground="Gray"
                        FontSize="13"
                        Width="100" Height="18"
                        TextAlignment="Center"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,240,0"/>
            <TextBlock Name="stock"
                        Text="Stock"
                        FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                        Foreground="Gray"
                        FontSize="13"
                        Width="50" Height="18"
                        TextAlignment="Right"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,35,0"/>
            <Image Name="image"
                    Width="32" Height="32"
                    HorizontalAlignment="Left"
                    Margin="153,4,0,4"/>
        </Grid>
    </Border>
</UserControl>
