<UserControl x:Class="Revamped_GroceryPOS.Components.Transaction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Revamped_GroceryPOS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="604">
    <Border Width="604" Height=" 28"
            Background="White">
        <Grid>
            <TextBlock Name="transactionId"
                       Text="Transaction ID"
                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                       Foreground="Black"
                       FontSize="11" 
                       Width="100" Height="17"
                       HorizontalAlignment="Left"
                       TextAlignment="Left"
                       Margin="20,0,0,0"/>
            <TextBlock Name="dateandtime"
                       Text="Date"
                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                       Foreground="Black"
                       FontSize="11"
                       Width="250" Height="17"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Name="total"
                       Text="Total"
                       FontFamily="pack://application:,,,/Resources/Fonts/poppins/#Poppins"
                       Foreground="Black"
                       FontSize="11"
                       Width="150" Height="17"
                       HorizontalAlignment="Right"
                       TextAlignment="Right"
                       Margin="0,0,20,0"/>
        </Grid>
    </Border>
</UserControl>
